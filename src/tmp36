//Connect TMP36 to Pin 1
int tmp36_Pin = 1;
//Analog temperature result
int tmp36_Reading;
//
float voltage;
//Variable to store the calculated temperature
float tmp36_temperature;
int temp36_temperature_scaled;


//fuction to be called inside loop()
void Tmp36 ()
{
tmp36_Reading = analogRead(tmp36_Pin);
//convert to voltage
voltage = tmp36_Reading * 5;
voltage = voltage / 1024;

//calculate temperature
//Convert from 10 mV per degree with 500 mV offset-
//-to degree Celcius.
//((voltage - 500mV) * 100  )
tmp36_temperature = (voltage - 0.5) * 100;
temp36_temperature_scaled = round(100 * tmp36_temperature);
}

